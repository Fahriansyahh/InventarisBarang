<div class="min-h-screen mt-6">
  <div class="mb-6 ">
    <h1 class="text-2xl font-bold text-gray-800">Dashboard / Produk / Create</h1>
  </div>

  <div class="bg-white p-6 rounded-lg shadow w-full max-w-screen-lg mx-auto">
    <h2 class="text-lg font-semibold mb-4">Tambah Produk</h2>

    <% if (errors.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
        <ul class="list-disc list-inside">
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/produk/store" method="POST" class="space-y-4">
      <!-- Nama Produk: full width -->
      <div class="w-full">
        <label class="block text-sm font-medium text-gray-700 mb-1">Nama Produk</label>
        <input type="text" name="nama" value="<%= old.nama || '' %>" class="border p-2 w-full rounded focus:outline-none focus:ring focus:border-blue-300">
      </div>

      <!-- Harga dan Stok: dua kolom -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Harga</label>
          <input type="number" name="harga" value="<%= old.harga || '' %>" class="border p-2 w-full rounded focus:outline-none focus:ring focus:border-blue-300">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Stok</label>
          <input type="number" name="stok" value="<%= old.stok || '' %>" class="border p-2 w-full rounded focus:outline-none focus:ring focus:border-blue-300">
        </div>
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition">
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>
